<div class="table-wrapper">
  <div class="table-title">
      <div class="row">
          <div class="col-sm-6">
            <h2>Gerenciar <b>Contas</b></h2>
          </div>
      		<div class="col-sm-6">
      			<a href="#addContaModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Adiciona nova conta</span></a>
      			<a href="#deleteContaModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Apagar</span></a>						
      		</div>
      </div>
  </div>
  <table class="table table-striped table-hover">
    <thead>
        <tr>
    			<th>
    				<span class="custom-checkbox">
    					<input type="checkbox" id="selectAll">
    					<label for="selectAll"></label>
    				</span>
    			</th>
    			<th>Conta</th>
          <th>Banco</th>
          <th>Agência</th>
          <th>Ações</th>
        </tr>
    </thead>
    <tbody>
      <% @contas.each do |conta| %>
        <tr>
    			<td>
    				<span class="custom-checkbox">
    					<input type="checkbox" id="checkbox<%=conta.id%>" value="1">
    					<label for="checkbox<%=conta.id%>"></label>
    				</span>
    			</td>
          <td><%= conta.conta %></td>
          <td><%= conta.banco.descricao %></td>
          <td><%= conta.agencia %></td>
          <td>
            <a href="#editContaModal" class="edit" data-toggle="modal" onclick="mountEditForm(<%= conta.to_json %>)"><i class="material-icons" data-toggle="tooltip" title="Editar">&#xE254;</i></a>
            <a href="#deleteContaModal" class="delete" data-toggle="modal"><i class="material-icons" data-toggle="tooltip" title="Apagar">&#xE872;</i></a>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
  <div class="clearfix">
      <div class="hint-text">Mostrando <b><%= @contas.length %></b> registros</div>
      <ul class="pagination">
          <li class="page-item disabled"><a href="#">Previous</a></li>
          <li class="page-item"><a href="#" class="page-link">1</a></li>
          <li class="page-item"><a href="#" class="page-link">2</a></li>
          <li class="page-item active"><a href="#" class="page-link">3</a></li>
          <li class="page-item"><a href="#" class="page-link">4</a></li>
          <li class="page-item"><a href="#" class="page-link">5</a></li>
          <li class="page-item"><a href="#" class="page-link">Next</a></li>
      </ul>
  </div>
</div>
<script>
	let mountEditForm = function(conta){
	  $('#conta_banco_id').val(conta.banco_id)
	  $('#conta_conta_numero').val(conta.conta_numero);
    $('#conta_conta_digito').val(conta.conta_digito);
    $('#conta_conta_digito').val(conta.conta_digito);
    $('#conta_agencia_numero').val(conta.agencia_numero);
    $('#conta_agencia_digito').val(conta.agencia_digito);
    let action = $('form')[0].action.indexOf('contas/1');
    $('form')[0].action = $('form')[0].action.substring(0, action + 7) + conta.id;
    console.log($('form')[0].action);
	}
</script>

<!-- Edit Modal HTML -->
<div id="editContaModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
				<div class="modal-header">						
					<h4 class="modal-title">Editar Conta</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">					
					<%= render 'form', :name => 'edit', conta: Conta.find(1) %>					
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
					<input type="submit" class="btn btn-info" value="Salvar">
				</div>
		</div>
	</div>
</div>

<!-- Create Modal HTML -->
<div id="addContaModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">						
				<h4 class="modal-title">Cadastrar Conta</h4>
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			</div>
			<div class="modal-body">					
				<%= render 'form', :name => 'create', conta: Conta.new %>				
			</div>
			<div class="modal-footer">
				<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
				<input type="submit" class="btn btn-success" value="Adicionar">
			</div>
		</div>
	</div>
</div>

<!-- Delete Modal HTML -->
<div id="deleteContaModal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
				<div class="modal-header">						
					<h4 class="modal-title">Apagar Conta</h4>
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				</div>
				<div class="modal-body">					
					<p>Tem certeza que deseja apagar esse registro?</p>
					<p class="text-danger"><small>Esta ação não poderá ser desfeita.</small></p>
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancelar">
					<%= link_to 'Apagar', @contas[1], method: :delete, :class =>'btn btn-danger' %>
				</div>
		</div>
	</div>
</div>

